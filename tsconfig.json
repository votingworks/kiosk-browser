{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2020",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "types/**/*", "__mocks__/**/*"]
}
